<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="-90"
                android:centerColor="#703292ff"
                android:centerY="0.75"
                android:endColor="#703292ff"
                android:startColor="#703292ff" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="-90"
                    android:centerColor="#903292ff"
                    android:centerY="0.75"
                    android:endColor="#903292ff"
                    android:startColor="#903292ff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="-90"
                    android:centerColor="#3292ffff"
                    android:centerY="0.75"
                    android:endColor="#3292ffff"
                    android:startColor="#3292ffff" />
            </shape>
        </clip>
    </item>

</layer-list>