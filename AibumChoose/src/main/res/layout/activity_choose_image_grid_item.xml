<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root_grid_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.ren.newalbumchoose.weight.SquareLayout
        android:id="@+id/choose_item_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/choose_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@mipmap/img_default_album"
            android:scaleType="centerCrop" />

    </com.ren.newalbumchoose.weight.SquareLayout>

    <ImageView
        android:id="@+id/choose_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@null"
        android:clickable="false"
        android:src="@mipmap/choose_image_no"
        app:layout_constraintBottom_toBottomOf="@+id/choose_item_square"
        app:layout_constraintEnd_toEndOf="@+id/choose_item_square" />


</androidx.constraintlayout.widget.ConstraintLayout>
