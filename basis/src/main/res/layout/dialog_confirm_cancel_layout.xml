<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"
    android:background="@drawable/dialog_bg"
 >

    <TextView
        android:id="@+id/dialogCanfirmCancelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="提示"
        android:textColor="@color/color_333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogCanfirmCancelContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_34"
        android:layout_marginTop="33dp"
        android:minHeight="@dimen/dp_80"
        android:layout_marginEnd="@dimen/dp_24"
        android:text="内容"
        android:textColor="@color/color_333333"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogCanfirmCancelTitle" />

    <View
        android:id="@+id/dialogCanfirmCancelLine"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/line_height"
        android:background="@color/color_e4e2e2"
        app:layout_constraintTop_toBottomOf="@+id/dialogCanfirmCancelContent" />

    <TextView
        android:id="@+id/dialogCanfirmCancelCancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_43"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toStartOf="@+id/dialogConfirmCancelConfirm"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogCanfirmCancelLine" />


    <TextView
        android:id="@+id/dialogConfirmCancelConfirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_43"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/title_bg"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/dialogCanfirmCancelCancel"
        app:layout_constraintTop_toBottomOf="@+id/dialogCanfirmCancelLine" />

    <View
        android:layout_width="@dimen/line_height"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/color_e4e2e2"
        app:layout_constraintBottom_toBottomOf="@+id/dialogCanfirmCancelCancel"
        app:layout_constraintStart_toEndOf="@+id/dialogCanfirmCancelCancel"
        app:layout_constraintTop_toTopOf="@+id/dialogCanfirmCancelCancel" />

</androidx.constraintlayout.widget.ConstraintLayout>