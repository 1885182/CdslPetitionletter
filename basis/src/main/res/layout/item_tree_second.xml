<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50">

    <ImageView
        android:id="@+id/itemTreeSecondIv"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_18"
        android:rotation="0"
        android:src="@drawable/trtcmeeting_right_arrow" />

    <TextView
        android:id="@+id/itemTreeSecondTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_4"
        android:layout_toStartOf="@+id/itemTreeSecondSelect"
        android:layout_toEndOf="@+id/itemTreeSecondIv"
        android:text="去走线"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/itemTreeSecondSelect"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:src="@mipmap/unselect_more_hui" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line2" />

</RelativeLayout>