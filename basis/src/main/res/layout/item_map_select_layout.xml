<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_9">

    <TextView
        android:id="@+id/itemMapSelectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sda"
        android:textColor="@color/color_030303"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/itemMapSelectAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemMapSelectName"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_toStartOf="@+id/itemMapSelectIV"
        android:ellipsize="middle"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginEnd="@dimen/dp_5"
        android:text="sda"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_12"
        tools:ignore="EllipsizeMaxLines" />

    <ImageView
        android:id="@+id/itemMapSelectIV"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"
        android:scaleType="fitXY"
        android:src="@mipmap/blue_select" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/itemMapSelectAddress"
        android:layout_marginStart="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/color_line2" />

</RelativeLayout>