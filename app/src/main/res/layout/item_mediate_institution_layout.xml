<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/r5_cwhite_shape"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/adapter_mediate_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/home_def_head_pic"
        app:shapeAppearanceOverlay="@style/circleImageStyle" />

    <TextView
        android:id="@+id/adapter_mediate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="承德市双滦区工作站"
        android:textSize="15sp"
        android:layout_alignTop="@id/adapter_mediate_image"
        android:layout_toRightOf="@id/adapter_mediate_image"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/adapter_mediate_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="承德市双滦区工作站"
        android:textSize="15sp"
        android:layout_alignBottom="@id/adapter_mediate_image"
        android:layout_toRightOf="@id/adapter_mediate_image"
        android:textColor="@color/color_999999"/>

</RelativeLayout>