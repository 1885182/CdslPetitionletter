<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/adapter_service_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="业务编号："
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="2022-02-02 10:23"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/adapter_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/adapter_service_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />


    <TextView
        android:id="@+id/adapter_dispute_type_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_line1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="问题分类:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_dispute_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_line1"
        android:singleLine="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_proposer_name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_dispute_type_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="申请人:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_proposer_name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_dispute_type_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_id_card_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_proposer_name_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="证件号码:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_id_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_proposer_name_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_mediate_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_id_card_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="联系方式:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_mediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_id_card_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_jia_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_mediate_tip"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="超时提醒:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_jia"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/adapter_mediate_tip"
        android:layout_marginLeft="110dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="@drawable/r15_95f204_shape"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_main"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_state_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_jia"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="业务状态:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_jia"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_main"
        android:textSize="15sp" />





    <View
        android:id="@+id/adapter_line3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/adapter_state"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />


</RelativeLayout>