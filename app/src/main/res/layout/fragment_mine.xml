<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color_f5f5f5"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_mine_top_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="25dp"
        android:gravity="center_vertical"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/avatar"
            android:src="@mipmap/ic_avatar"
            android:layout_marginLeft="40dp"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="登录"
            android:layout_toRightOf="@id/avatar"
            android:layout_centerVertical="true"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/r15_cwhite_shape"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="30dp">


        <TextView
            android:id="@+id/minePhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_mine_phone"
            android:drawableRight="@mipmap/right_back2"
            android:text="修改手机号"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />

        <View
            android:id="@+id/phoneLine"
            android:layout_below="@+id/minePhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />


        <TextView
            android:id="@+id/minePas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:layout_below="@+id/phoneLine"
            android:drawableLeft="@mipmap/ic_mine_pas"
            android:drawableRight="@mipmap/right_back2"
            android:text="修改密码"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            />

        <View
            android:layout_below="@+id/minePas"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/color_line" />





        <TextView
            android:id="@+id/mineLogout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/r8_main_shape"
            android:gravity="center"
            android:text="退出登录"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>





</RelativeLayout>