<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".sentiment.SentimentInsertActivity">

    <com.sszt.basis.weight.TitleLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_back_visibility="true"
        app:title_text="民情收集" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/s1_eeeeee_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="姓名:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <com.sszt.basis.weight.EditTipView
                    android:id="@+id/sentimentInsertName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    app:msg="最多输入20个字符"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="联系电话:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <com.sszt.basis.weight.EditTipView
                    android:id="@+id/sentimentInsertPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请输入联系电话"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="反应类型:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sentimentInsertType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请选择反应类型"
                    android:drawableRight="@mipmap/right_back2"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="所在街镇:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sentimentInsertTown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请选择所在街镇"
                    android:drawableRight="@mipmap/right_back2"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="所在村社:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sentimentInsertVillage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请选择所在村社"
                    android:drawableRight="@mipmap/right_back2"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="居住详址:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <com.sszt.basis.weight.EditTipView
                    android:id="@+id/sentimentInsertAddressInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请输入居住详址"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    app:msg="最多输入20个字符"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:drawableLeft="@mipmap/red_star"
                    android:text="描述内容:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <com.sszt.basis.weight.EditTipView
                    android:id="@+id/sentimentInsertDescribe"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请输入描述内容"
                    android:maxLength="300"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    app:msg="最多输入300字符" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="附件:"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sentimentInsertFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/r10_cf5f5f5_shape"
                    android:hint="请选择附件"
                    android:layout_marginBottom="15dp"
                    android:drawableRight="@mipmap/right_back2"
                    android:padding="10dp"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/toSave"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:background="@drawable/r8_main_shape"
                android:textSize="15sp"
                android:text="提交"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>