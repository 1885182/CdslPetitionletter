<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/adapter_sign_name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:text="调查人1签名："
        android:textColor="@color/color_030303"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_sign_name"
        app:layout_constraintRight_toLeftOf="@+id/adapter_sign_name"
        app:layout_constraintTop_toTopOf="@+id/adapter_sign_name" />


    <ImageView
        android:id="@+id/adapter_sign_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="10dp"
        android:minHeight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adapter_sign_name_tv"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/r8_main_shape"
        android:gravity="center"
        android:text="签名"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/adapter_sign_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/adapter_sign_name" />

</androidx.constraintlayout.widget.ConstraintLayout>