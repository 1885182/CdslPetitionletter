<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/adapter_service_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="业务编号："
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:text="2022-02-02 10:23"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/adapter_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/adapter_service_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />


    <TextView
        android:id="@+id/adapter_dispute_type_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_line1"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="矛盾纠纷类型:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_dispute_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_line1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_proposer_name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_dispute_type_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="申请人:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_proposer_name_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_dispute_type_tip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_id_card_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_proposer_name_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="证件号码:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_id_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_proposer_name_tip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_mediate_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_id_card_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="调解机构:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_mediate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_id_card_tip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_state_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_mediate_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="业务状态:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_mediate_tip"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="纠纷"
        android:textColor="@color/color_main"
        android:textSize="15sp" />



    <View
        android:id="@+id/adapter_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_below="@+id/adapter_state_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <LinearLayout
        android:id="@+id/adapter_linear"
        android:layout_below="@id/adapter_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/adapter_to_termination"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="人民调解终止书"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/r5_main_shape"/>

        <TextView
            android:id="@+id/adapter_to_agreement"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="人民调解协议书"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/r5_main_shape"/>

        <TextView
            android:id="@+id/adapter_to_finish"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="完成调查"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/r5_main_shape"/>

        <TextView
            android:id="@+id/adapter_to_record_word"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:text="笔录"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/r5_main_shape"/>

    </LinearLayout>

    <View
        android:id="@+id/adapter_line3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/adapter_linear"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />


</RelativeLayout>