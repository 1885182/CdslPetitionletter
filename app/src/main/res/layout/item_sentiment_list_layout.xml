<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">


    <TextView
        android:id="@+id/adapter_service_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="业务编号："
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <View
        android:id="@+id/adapter_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:visibility="gone"
        android:layout_below="@+id/adapter_service_number"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_line" />

    <TextView
        android:id="@+id/adapter_name_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="姓名:"
        android:layout_below="@+id/adapter_line1"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:text="纠纷"
        android:layout_below="@+id/adapter_line1"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_phone_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_name_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="联系方式:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_name_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_type_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_phone_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="反应类型:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_phone_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_time_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_type_tip"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="登记时间:"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/adapter_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adapter_type_tip"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        tools:text="纠纷"
        android:textColor="@color/color_999999"
        android:textSize="15sp" />




    <View
        android:id="@+id/adapter_line3"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/adapter_time_tip"
        android:layout_marginTop="10dp"
        android:background="@color/color_line" />


</RelativeLayout>